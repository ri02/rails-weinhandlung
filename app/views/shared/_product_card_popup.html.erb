
<div class="popup-close">
  <p><i class="fas fa-times"></i></p>
</div>

<% if product.line_items.empty? %>
  <%= link_to line_items_path(product_id: product.id),remote: true ,method: :post do %>
    <h3>HINZUFÜGEN</h3>
  <% end %>
<% end %>
<%product.line_items.each do |item|%>
  <p>Anzahl im Warenkorb</p>

  <div class= 'popup-rating'>
    <h3><%= link_to  line_item_reduce_path(id: item.id), remote: true ,method: :post do %>
       <i class="fas fa-minus"></i>
      <% end %></h3>
    <h2><strong><%= item.quantity %></strong></h2>
    <h3><%= link_to line_item_add_path(id: item.id),  remote: true ,method: :post do %>
      <i class="fas fa-plus"></i>
      <% end %></h3>
  </div>
<% end %>
<div class="popup-exit">
  <h4>WEITERSTÖBERN</h4>
</div>
 <p> <%= link_to "Zum Warenkorb", cart_path(@current_cart) %></p>

